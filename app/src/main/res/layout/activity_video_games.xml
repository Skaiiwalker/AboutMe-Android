<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lbar8299.aboutme.VideoGames">

    <TextView android:text="@string/gamesText" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#010101"
        android:id="@+id/gamesText"
        android:textSize="24dp" />

    <ImageView
        android:layout_width="550dp"
        android:layout_height="520dp"
        android:id="@+id/linkImage"
        android:layout_below="@+id/gamesText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/linker" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="@string/back"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />

</RelativeLayout>
